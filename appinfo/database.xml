<database>
    <name>*dbname*</name>
    <create>true</create>
    <overwrite>false</overwrite>
    <charset>utf8</charset>
    <table>
        <name>*dbprefix*mailadmin_domains</name>
        <declaration>
            <field>
                <name>domain</name>
                <type>text</type>
                <length>64</length>
                <default></default>
                <notnull>true</notnull>
                <primary>true</primary>
            </field>
        </declaration>
    </table>
    <table>
        <name>*dbprefix*mailadmin_domain_group</name>
        <declaration>
            <field>
                <name>gid</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>64</length>
            </field>
            <field>
                <name>domain</name>
                <type>text</type>
                <length>64</length>
                <notnull>true</notnull>
            </field>
            <index>
                <name>mailadmin_domain_group_pk</name>
                <primary>1</primary>
                <field>
                    <name>gid</name>
                    <name>domain</name>
                </field>
            </index>
        </declaration>
    </table>
    <table>
        <name>*dbprefix*mailadmin_user_alias</name>
        <declaration>
            <field>
                <name>email</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>64</length>
            </field>
            <field>
                <name>alias</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>64</length>
            </field>
            <field>
                <name>validto</name>
                <type>date</type>
                <notnull>false</notnull>
            </field>
            <index>
                <name>mailadmin_user_alias_pk</name>
                <primary>1</primary>
                <field>
                    <name>email</name>
                    <name>alias</name>
                </field>
            </index>
        </declaration>
    </table>
    <table>
        <name>*dbprefix*mailadmin_domain_alias</name>
        <declaration>
            <field>
                <name>domain</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>64</length>
            </field>
            <field>
                <name>alias</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>64</length>
            </field>
            <index>
                <name>mailadmin_domain_alias_pk</name>
                <primary>1</primary>
                <field>
                    <name>domain</name>
                    <name>alias</name>
                </field>
            </index>
        </declaration>
    </table>
</database>